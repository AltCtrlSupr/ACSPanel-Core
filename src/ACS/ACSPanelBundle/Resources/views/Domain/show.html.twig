{% extends '::base.html.twig' %}
{% block header_title %} - {% trans %}Domain{% endtrans %}{% endblock %}
{% block body %}

<table class="record_properties table">
    <tbody>
        <tr>
            <th>{% trans %}Domain{% endtrans %}</th>
            <td>{{ entity.domain }}</td>
        </tr>
        <tr>
            <th>{% trans %}Enabled{% endtrans %}</th>
            <td>{{ entity.enabled }}</td>
        </tr>
        <tr>
            <th>{% trans %}is HTTPD Alias?{% endtrans %}</th>
            <td>{{ entity.ishttpdalias }}</td>
        </tr>
        <tr>
            <th>{% trans %}is DNS Alias?{% endtrans %}</th>
            <td>{{ entity.isdnsalias }}</td>
        </tr>
        <tr>
            <th>{% trans %}is Mail Alias?{% endtrans %}</th>
            <td>{{ entity.ismailalias }}</td>
        </tr>
        <tr>
            <th>{% trans %}Created at{% endtrans %}</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{% trans %}Updated at{% endtrans %}</th>
            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('domain') }}">
            {% trans %}Back to the list{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('domain_edit', { 'id': entity.id }) }}">
            {% trans %}Edit{% endtrans %}
        </a>
    </li>
    <li>
        <form action="{{ path('domain_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{% trans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}
