{% extends '::base.html.twig' %}
{% block header_title %} - {% trans %}DnsRecord edit{% endtrans %}{% endblock %}
{% block body %}

<div class="form_box">
    <form action="{{ path('dnsrecord_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">{%trans%}Edit{%endtrans%}</button>
        </p>
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('dnsrecord') }}">
            {%trans%}Back to the list{%endtrans%}
        </a>
    </li>
    <li>
        <form action="{{ path('dnsrecord_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" onclick="if(!confirm('{% trans %}Are you sure?{% endtrans %}')) { return false; }">{% trans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>

{% endblock %}
