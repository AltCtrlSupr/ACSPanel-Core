{% extends '::base.html.twig' %}
{% block header_title %} - {% trans %}MailAlias edit{% endtrans %}{% endblock %}
{% block body %}

<div class="form_box">
    <form action="{{ path('mailalias_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <p>
            {{ form_label(form.address) }}
            {{ form_widget(form.address) }}
	    @
            {{ form_widget(form.mail_domain) }}
            {{ form_label(form.goto) }}
            {{ form_widget(form.goto) }}
            <button class="btn" type="submit">Edit</button>
        </p>
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('mailalias') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('mailalias_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="if(!confirm('{% trans %}Are you sure?{% endtrans %}')) { return false; }">{% trans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}
