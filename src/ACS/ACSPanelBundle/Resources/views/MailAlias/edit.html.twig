{% extends '::base.html.twig' %}
{% block body %}
<h1>MailAlias edit</h1>

<div class="form_box">
    <form action="{{ path('mailalias_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('mailalias') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('mailalias_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
