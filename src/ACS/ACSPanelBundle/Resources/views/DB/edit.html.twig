{% extends '::base.html.twig' %}
{% block header_title %} - {% trans %}Database edit{% endtrans %}{% endblock %}
{% block body %}

<div class="form_box">
    <form action="{{ path('db_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('db') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('db_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn" type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
