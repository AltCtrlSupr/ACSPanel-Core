{% extends '::base.html.twig' %}
{% block header_title %} - {% trans %}MailDomain{% endtrans %}{% endblock %}
{% block body %}

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Domain</th>
            <td>{{ entity.domain }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Maxaliases</th>
            <td>{{ entity.maxAliases }}</td>
        </tr>
        <tr>
            <th>Maxmailboxes</th>
            <td>{{ entity.maxMailboxes }}</td>
        </tr>
        <tr>
            <th>Maxquota</th>
            <td>{{ entity.maxQuota }}</td>
        </tr>
        <tr>
            <th>Transport</th>
            <td>{{ entity.transport }}</td>
        </tr>
        <tr>
            <th>Backupmx</th>
            <td>{{ entity.backupmx }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Enabled</th>
            <td>{{ entity.enabled }}</td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updatedat</th>
            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('maildomain') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('maildomain_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('maildomain_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
